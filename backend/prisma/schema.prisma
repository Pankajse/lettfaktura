generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id      Int @id @default(autoincrement())
  businessName     String
  personName       String
  address          String
  postalCode       String
  City             String
  email            String @unique
  phoneNo          String
  password         String 
  products          Product[]
}

model Terms{
  id        Int @id @default(autoincrement())
  english   String
  svenska   String
}

model Product{
  id       Int @id @default(autoincrement())
  articleNo      Int
  productName    String
  inPrice        Int
  price          Int
  unit           String
  inStock        Int
  description    String
  ownerId        Int
  owner          User @relation(fields: [ownerId],references: [id])
}
